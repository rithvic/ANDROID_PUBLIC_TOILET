<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toilet Details"
        android:textSize="22sp"
        android:fontFamily="sans-serif"
        android:background="@color/list_background"
        android:padding="10dp"
        android:textColor="@color/windowBackground"
        android:gravity="center"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusableInTouchMode="true">

    <Spinner
        android:id="@+id/gender_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/corner_radius"
        android:textAlignment="center"/>

    <Spinner
        android:id="@+id/hygienic_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/corner_radius"
        android:textAlignment="center"/>

    <Spinner
        android:id="@+id/place_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/corner_radius"
        android:textAlignment="center"/>

    <Spinner
        android:id="@+id/fees_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/corner_radius"
        android:textAlignment="center"/>

    <Spinner
        android:id="@+id/Disable_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/corner_radius"
        android:textAlignment="center"/>

    <RelativeLayout
        android:id="@+id/rating_stars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:padding="5dp"
        android:background="@drawable/corner_radius">

        <TextView
            android:id="@+id/Rating_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:textSize="18sp"
            android:textColor="#000000"
            android:text="Ratings:"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/Rating_text"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:padding="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/first_star"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ratestar"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:id="@+id/second_star"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/star"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:id="@+id/third_star"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/star"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:id="@+id/fourth_star"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/star"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:id="@+id/fifth_star"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/star"
                android:layout_marginLeft="5dp" />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Image"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:background="#FFFFFF"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:weightSum="3">

        <ImageView
            android:id="@+id/ivImage1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/addimage"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/ivImage2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/addimage"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/ivImage3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/addimage"
            android:layout_gravity="center"/>

    </LinearLayout>

    <EditText
        android:id="@+id/comment_id"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/corner_radius"
        android:cursorVisible="false"
        android:hint="Comments"
        android:gravity="start"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="5dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp">

                <!--<Button
                    android:id="@+id/cancel_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textSize="30sp"
                    android:textAllCaps="false"
                    android:background="@drawable/button_bachground"
                    android:textColor="#FFFFFF"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"/>

    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:textSize="30sp"
        android:textAllCaps="false"
        android:layout_toEndOf="@+id/cancel_button"
        android:background="@drawable/button_bachground"
        android:textColor="#FFFFFF"
        android:layout_marginStart="10dp"/>-->


                <RelativeLayout
                    android:id="@+id/cancel_button_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittext"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/report_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/cancel_location"
                        android:layout_marginStart="5dp"/>

                    <Button
                        android:id="@+id/report_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_toEndOf="@+id/report_icon"
                        android:background="@android:color/transparent"
                        android:padding="5dp"
                        android:text="Cancel"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        android:textSize="25sp"
                        android:clickable="false"/>


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/add_button_view"
                    android:layout_toRightOf="@+id/cancel_button_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittext"
                    android:layout_marginStart="10dp"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/comment_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/add_location"
                        android:layout_marginStart="5dp"/>

                    <Button
                        android:id="@+id/info_add_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_toEndOf="@+id/comment_icon"
                        android:background="@android:color/transparent"
                        android:padding="5dp"
                        android:text="Add"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        android:textSize="25sp"
                        android:clickable="false"/>


                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>