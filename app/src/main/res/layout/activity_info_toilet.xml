        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/price_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/price_text"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="italic"
                android:padding="10dp"
                android:text="Gender        : " />

            <TextView
                android:id="@+id/price_text"
                android:layout_width="200dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="@string/not_available"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="20dp"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/higenic_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/higenic_text"
                android:textSize="18sp"
                android:textColor="#000000"
                android:padding="10dp"
                android:textStyle="italic"
                android:text="Hygenic       : " />

            <TextView
                android:id="@+id/higenic_text"
                android:layout_width="200dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="@string/not_available"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="20dp"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/place_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/place_text"
                android:textSize="18sp"
                android:textColor="#000000"
                android:padding="10dp"
                android:textStyle="italic"
                android:text="Place            : " />

            <TextView
                android:id="@+id/place_text"
                android:layout_width="200dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="@string/not_available"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="20dp"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/disabled_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/disabled_text"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="italic"
                android:padding="10dp"
                android:text="Disabled Access : " />

            <TextView
                android:id="@+id/disabled_text"
                android:layout_width="200dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="@string/not_available"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="20dp"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Rating          : "
                android:textStyle="italic"
                android:textColor="#000000"
                android:padding="10dp"
                android:textSize="18sp" />

            <RatingBar
                android:id="@+id/ratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:isIndicator="true"
                android:numStars="5"
                android:progressTint="@color/Icon_Blue" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Address_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/address_text"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="italic"
                android:padding="10dp"
                android:text="Address       : " />

            <TextView
                android:id="@+id/address_text"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="@string/not_available"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"
            android:textStyle="italic"
            android:padding="10dp"
            android:text="Comments  : " />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="2"
            android:layout_marginBottom="10dp">

            <ImageView
                android:src="@drawable/left_scroll_bar"
                android:id="@+id/LeftComent"
                android:visibility="invisible"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:contentDescription="@string/todo" />

            <android.support.v7.widget.RecyclerView
                android:layout_weight="1"
                android:id="@+id/recyclerComments"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>


            <ImageView
                android:src="@drawable/right_scroll_bar"
                android:id="@+id/RightComent"
                android:layout_width="15dp"
                android:visibility="invisible"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:contentDescription="@string/todo" />


        </LinearLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp">

            <RelativeLayout
                android:id="@+id/report_button_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/report_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/signing"
                    android:layout_marginStart="5dp"/>

                <Button
                    android:id="@+id/report_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@+id/report_icon"
                    android:background="@android:color/transparent"
                    android:padding="5dp"
                    android:textStyle="italic"
                    android:text="Report"
                    android:textAllCaps="false"
                    android:textColor="@color/list_background"
                    android:textSize="25sp"
                    android:clickable="false"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/comment_button_view"
                android:layout_toRightOf="@+id/report_button_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:layout_marginStart="10dp"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/comment_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/chat"
                    android:layout_marginStart="5dp"/>

                <Button
                    android:id="@+id/info_add_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@+id/comment_icon"
                    android:background="@android:color/transparent"
                    android:padding="5dp"
                    android:textStyle="italic"
                    android:text="Comment"
                    android:textAllCaps="false"
                    android:textColor="@color/list_background"
                    android:textSize="25sp"
                    android:clickable="false"/>


            </RelativeLayout>

